    "ranges": {
      "preflop_standard": "GTO_6MAX",
      "postflop_aggression": "NORMAL",
      "adjust_for_players": true,
      "dynamic_adjustment": true
    }
  },
  "recognition": {
    "template_matching_method": "TM_CCOEFF_NORMED",
    "min_card_area": 100,
    "max_card_area": 10000,
    "card_aspect_min": 1.2,
    "card_aspect_max": 2.0,
    "debug_save_images": false,
    "debug_save_path": "debug/recognition"
