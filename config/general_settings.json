{
  "version": "2.0",
  "system": {
    "update_interval_ms": 1000,
    "confidence_threshold": 0.85,
    "log_level": "INFO",
    "save_hand_history": true,
    "max_hands_per_session": 1000,
    "auto_restart_hours": 4,
    "performance_mode": "BALANCED"
  },
  "overlay": {
    "position": "top_right",
    "transparency": 0.9,
    "font_size": 14,
    "theme": "dark",
    "show_timer": true,
    "show_confidence": true,
    "show_alternatives": false,
    "auto_hide": false,
    "hide_delay_seconds": 5
  },
  "strategy": {
    "aggression_factor": 1.0,
    "tightness_factor": 1.0,
    "default_bet_sizes": {
      "preflop_open": 2.2,
      "3bet": 3.0,
      "4bet": 2.2,
      "5bet": 2.0,
      "cbet_flop": 0.33,
      "cbet_turn": 0.65,
      "cbet_river": 0.70,
      "value_bet": 0.75,
      "bluff_bet": 0.55,
      "pot_commitment_threshold": 0.4
